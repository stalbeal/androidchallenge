<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:id="@+id/ly_container_current_status"
    tools:context="com.knomatic.weather.presentation.fragments.CurrentWeatherFragment">


    <ImageView
        android:id="@+id/iv_background_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="0.35"
        android:src="@drawable/ic_cloud"
        android:tint="@android:color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/text_container_margin"
        android:layout_gravity="center"
        android:layout_weight="0.65"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="@dimen/principal_text_size"
                android:text="12Â°"
                android:textColor="@android:color/white"/>

            <ImageView
                android:id="@+id/iv_temperature_icon"
                android:layout_width="@dimen/ic_temperature_size"
                android:layout_height="@dimen/ic_temperature_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_cloud"
                android:tint="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="TextView"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_timezone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="@dimen/normal_text_size"
                android:text="TextView"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/tv_sumary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="@dimen/normal_text_size"
                android:text="TextView"
                android:textColor="@android:color/white"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
